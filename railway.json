{
  "$schema": "https://railway.app/railway.schema.json",
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "cd frontend && node server.js",
    "buildCommand": "cd frontend && npm install && CI=false npm run build"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "GENERATE_SOURCEMAP": "false",
        "CI": "false",
        "PORT": "3000"
      }
    }
  }
}