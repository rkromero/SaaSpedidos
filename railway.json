{
  "$schema": "https://railway.app/railway.schema.json",
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "npm start"
  },
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd frontend && npm install && npm run build:railway"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "GENERATE_SOURCEMAP": "false"
      }
    }
  }
} 